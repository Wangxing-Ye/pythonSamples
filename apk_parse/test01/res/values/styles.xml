<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="dksdk_theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="dk_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="dk_recommend_dialog_style" parent="@style/dk_dialog_style">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="dk_style_user_edittext">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/dk_color_333333</item>
        <item name="android:textColorHint">@color/dk_color_999999</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/dk_edittext_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="DK.Theme.NoBackGround" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/dk_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="DK.Theme.NoBackGround.NoAnimation" parent="@style/DK.Theme.NoBackGround">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="payment_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/new_bg_dialog1</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="dot_style">
        <item name="android:layout_width">10.0dip</item>
        <item name="android:layout_height">10.0dip</item>
        <item name="android:layout_marginLeft">2.0dip</item>
        <item name="android:layout_marginRight">2.0dip</item>
    </style>
    <style name="banner_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/dk_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <style name="loading_small" parent="@android:style/Widget.ProgressBar.Inverse">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:indeterminateDrawable">@anim/dk_lottery_anim</item>
    </style>
    <style name="Dialog_Fullscreen1" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Theme_billing_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
